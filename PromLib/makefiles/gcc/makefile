# makefile for GNU make (automatically generated by makemake)
# NOTE: indent with TAB in GNU makefiles!

# paths are relative to the project directory (current directory during make)

OBJDIR = _out/gcc/
BINDIR = _bin/gcc/
LIBRARY = $(BINDIR)/prometheus.library

# compiler and linker

CC = m68k-amigaos-gcc
LD = m68k-amigaos-gcc

CFLAGS ?= 
CFLAGS += -m68020-60 -O2 -g -ggdb -DAMIGAOS3 -I./include -I../PrometheusCard
LDFLAGS ?=
LDFLAGS += -ramiga-lib -nostartfiles

# target 'all' (default target)

all : $(LIBRARY)

$(OBJDIR)driver_2.o : driver_2.c
	mkdir -p $(OBJDIR)
	mkdir -p $(BINDIR)
	$(CC) $(CFLAGS) -c driver_2.c -o $(OBJDIR)driver_2.o

OBJS = $(OBJDIR)driver_2.o

$(LIBRARY) : $(OBJS)
	$(LD) $(LDFLAGS) $(OBJS) -o $(LIBRARY)

# target 'clean'

clean:
	-delete $(EXE)
	-delete $(OBJDIR)\*.o
